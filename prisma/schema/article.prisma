model Article {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    content String
    image String
    slug String @unique
    
    createdAt DateTime @default(now())
    
    comments Comment[]
    tags TagArticle[]

    userId String   @db.ObjectId
    user  User  @relation(fields: [userId], references: [id])
    @@index([userId])
}