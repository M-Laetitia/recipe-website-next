model Recipe {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    instruction String
    duration Int
    difficulty Int
    image String
    slug String @unique
    createdAt DateTime @default(now())
    
    reviews Review[]
    steps Step[]
    tools ToolRecipe[]
    ingredients IngredientRecipe[]
    categories  CategoryRecipe[]
    
    userId String   @db.ObjectId
    user   User  @relation(fields: [userId], references: [id])
    @@index([userId])
}

